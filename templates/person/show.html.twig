const url = new URL('http://localhost/hub');
url.searchParams.append('topic', 'http://120.0.0.1:8000/person/{id}');


const eventSource = new EventSource(url);

// The callback will be called every time an update is published
eventSource.onmessage = e => console.log(e); // do something with the payload
</script>
{% endblock %}

{% block body %}

    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ person.mail }}</td>
            </tr>
            <tr>
                <th>Phone Num</th>
                <td>{{ person.phoneNum }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ person.createdAt ? person.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ person.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person_index') }}">back to list</a>

    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
